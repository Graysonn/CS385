<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.andrew.andyminiblue.MainActivity"
    android:background="@drawable/background300300">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Intro"
        android:id="@+id/textView2"
        style="@style/Info"
        android:textSize="25dp"
        android:layout_above="@+id/Score"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stick"
        android:id="@+id/button"
        android:layout_above="@+id/reset"
        android:layout_toEndOf="@+id/reset" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hit Me"
        android:id="@+id/addCard"
        android:layout_alignTop="@+id/button"
        android:layout_toStartOf="@+id/reset" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Score"
        android:id="@+id/Score"
        android:textSize="50dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        style="@style/Playerscore"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ComputerScore"
        android:id="@+id/PCScore"
        android:textSize="50dp"
        android:layout_below="@+id/Score"
        android:layout_centerHorizontal="true"
        style="@style/PCscore" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/reset"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="No. of Wins: 0"
        android:id="@+id/WinCount"
        android:layout_marginTop="41dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        style="@style/Info"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="No. of Loss&apos;: 0"
        android:id="@+id/LossCount"
        style="@style/Info"
        android:layout_below="@+id/WinCount"
        android:layout_alignParentStart="true"
        android:layout_marginTop="41dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/card"
        android:layout_above="@+id/textView2"
        android:layout_below="@+id/LossCount"
        android:layout_alignEnd="@+id/textView2"
        android:contentDescription="@drawable/redcardback"
        android:layout_alignStart="@+id/textView2"
        android:visibility="visible"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/card2"
        android:layout_above="@+id/textView2"
        android:layout_alignParentStart="true"
        android:contentDescription="playercard2"
        android:src="@drawable/redcardback"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/card3"
        android:contentDescription="playercard3"
        android:src="@drawable/redcardback"
        android:layout_alignTop="@+id/card2"
        android:layout_toEndOf="@+id/card2" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/card4"
        android:contentDescription="playercard4"
        android:src="@drawable/redcardback"
        android:layout_alignTop="@+id/card3"
        android:layout_toEndOf="@+id/card3" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/card5"
        android:contentDescription="playercard4"
        android:src="@drawable/redcardback"
        android:layout_above="@+id/textView2"
        android:layout_toEndOf="@+id/card4" />


</RelativeLayout>
