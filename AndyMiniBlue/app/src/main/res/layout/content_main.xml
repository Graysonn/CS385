<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".gameScreen"
    android:background="@drawable/background300300">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Intro"
        android:id="@+id/textView2"
        style="@style/Info"
        android:textSize="15dp"
        android:layout_above="@+id/Score"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stick"
        android:id="@+id/button"
        android:layout_above="@+id/reset"
        android:layout_toEndOf="@+id/reset" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hit Me"
        android:id="@+id/addCard"
        android:layout_alignTop="@+id/button"
        android:layout_toStartOf="@+id/reset" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Player Score:"
        android:id="@+id/Score"
        android:textSize="20dp"
        style="@style/Playerscore"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Computer Score:"
        android:id="@+id/PCScore"
        android:textSize="20dp"
        android:layout_below="@+id/Score"
        android:layout_centerHorizontal="true"
        style="@style/PCscore" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play Again"
        android:id="@+id/reset"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="No. of Wins: 0"
        android:id="@+id/WinCount"
        android:layout_marginTop="41dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        style="@style/Info"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="No. of Losses: 0"
        android:id="@+id/LossCount"
        style="@style/Info"
        android:layout_alignTop="@+id/WinCount"
        android:layout_toEndOf="@+id/PCScore" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:id="@+id/card"
        android:contentDescription="@drawable/redcardback"
        android:visibility="invisible"
        android:layout_alignBottom="@+id/card2"
        android:src="@drawable/redcardback"
        android:layout_toStartOf="@+id/card2" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:id="@+id/card2"
        android:contentDescription="playercard2"
        android:src="@drawable/redcardback"
        android:layout_alignTop="@+id/card3"
        android:layout_toStartOf="@+id/card3"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:id="@+id/card3"
        android:contentDescription="playercard3"
        android:src="@drawable/redcardback"
        android:layout_above="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:id="@+id/card4"
        android:contentDescription="playercard4"
        android:src="@drawable/redcardback"
        android:layout_alignTop="@+id/card3"
        android:layout_toEndOf="@+id/card3"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:id="@+id/card5"
        android:contentDescription="playercard4"
        android:src="@drawable/redcardback"
        android:layout_alignTop="@+id/card4"
        android:layout_toEndOf="@+id/card4"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:id="@+id/comCard1"
        android:contentDescription="compcard1"
        android:src="@drawable/redcardback"
        android:layout_below="@+id/PCScore"
        android:layout_toStartOf="@+id/compCard2"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:id="@+id/compCard2"
        android:contentDescription="compcard2"
        android:src="@drawable/redcardback"
        android:layout_alignTop="@+id/comCard1"
        android:layout_toStartOf="@+id/compCard3"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:id="@+id/compCard3"
        android:contentDescription="compcard3"
        android:src="@drawable/redcardback"
        android:layout_alignTop="@+id/compCard2"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:id="@+id/compCard4"
        android:contentDescription="compcard4"
        android:src="@drawable/redcardback"
        android:layout_alignBottom="@+id/compCard3"
        android:layout_toEndOf="@+id/compCard3"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:id="@+id/compCard5"
        android:contentDescription="compcard5"
        android:src="@drawable/redcardback"
        android:layout_alignBottom="@+id/compCard4"
        android:layout_toEndOf="@+id/compCard4"
        android:visibility="invisible" />


</RelativeLayout>
